<!-- Astra-AI hero: single <img> + CSS background, with reserved bottom space for text -->
<section class="relative overflow-hidden rounded-3xl border border-slate-800 min-h-[44vh] md:aspect-[16/9] pb-36 md:pb-48 hero-parallax">

  <!-- Full-bleed blurred background (desktop only) -->
  <div
    class="absolute inset-0 hidden md:block bg-no-repeat bg-cover bg-top blur-lg hero-bg-pulse"
    style="background-image: url('/assets/hero/astra-ai.png');"
    aria-hidden="true"
  ></div>

  <!-- Legibility gradient -->
  <div class="absolute inset-0 bg-gradient-to-t from-slate-950/80 via-slate-950/40 to-transparent pointer-events-none"></div>

  <!-- Foreground image (no crop on small; top-aligned; cover on md+) -->
  <img
    src="/assets/hero/astra-ai.png"
    alt="Astra-AI"
    class="relative z-10 block mx-auto w-full h-auto max-h-[75vh] object-contain md:object-cover object-top hero-enter"
  />

  <!-- Text overlay (absolutely positioned, with section padding reserving space) -->
  <div class="absolute inset-x-0 bottom-0 z-20 px-6 md:px-10 pb-6 md:pb-12 hero-enter">
    <h1 class="text-4xl md:text-5xl font-semibold tracking-tight">Astra-AI</h1>
    <p class="mt-3 max-w-2xl text-slate-300">
      A brand-new machine-learning module for data scientists.
    </p>
    <div class="mt-6 flex gap-3 hero">
      <a href="https://pypi.org/project/astra-ai/" class="px-5 py-2.5 rounded-xl bg-sky-500 text-slate-900 font-medium">Explore Astra-AI</a>
      <a href="/articles/" class="px-5 py-2.5 rounded-xl border border-slate-700">Read Articles</a>
    </div>
  </div>
</section>

<!-- Rest of Projects -->
<h2 class="text-2xl font-semibold mt-10 mb-6 reveal">All Projects</h2>

<div class="grid md:grid-cols-2 gap-6">
  {% for p in projects %}
  <article class="rounded-2xl border border-slate-800 overflow-hidden hover:shadow-md transition reveal">
    {% if p.image %}
      <a href="{{ p.url }}" target="_blank" rel="noopener">
        <img src="{{ p.image }}" alt="{{ p.title }}" class="w-full h-48 object-cover">
      </a>
    {% endif %}
    <div class="p-5">
      <a href="{{ p.url }}" target="_blank" rel="noopener">
        <h3 class="text-xl font-semibold">{{ p.title }}</h3>
      </a>
      {% if p.summary %}
        <p class="mt-2 text-slate-300">{{ p.summary }}</p>
      {% endif %}
      {% if p.metrics %}
        <p class="mt-2 text-sm text-slate-400">{{ p.metrics }}</p>
      {% endif %}
      {% if p.tags %}
        <div class="mt-3 flex flex-wrap gap-2">
          {% for t in p.tags %}
            <span class="px-2 py-1 rounded-full text-xs border border-slate-700">{{ t }}</span>
          {% endfor %}
        </div>
      {% endif %}
    </div>
  </article>
  {% endfor %}
</div>