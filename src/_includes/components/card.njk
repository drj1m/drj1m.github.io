{% macro ProjectCard(p) %}
  <article class="rounded-2xl border border-slate-800 p-5 hover:shadow-sm transition">
    <a href="{{ p.url }}"><h3 class="text-xl font-semibold">{{ p.data.title }}</h3></a>
    {% if p.data.summary %}<p class="mt-2 text-slate-300">{{ p.data.summary }}</p>{% endif %}
    {% if p.data.metrics %}<p class="mt-2 text-sm text-slate-400">Impact: {{ p.data.metrics }}</p>{% endif %}
    {% if p.data.tags %}
      <div class="mt-3 flex flex-wrap gap-2">
        {% for t in p.data.tags %}
          <span class="px-2 py-1 rounded-full text-xs border border-slate-700">{{ t }}</span>
        {% endfor %}
      </div>
    {% endif %}
  </article>
{% endmacro %}
